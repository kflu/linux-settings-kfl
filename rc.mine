# {{{ RECIPE V2
path_add() {
    : "${1:?dir to be added}"
    PATH="$PATH":"$(realpath "$1")"
}
path_rm() {
    PATH="${PATH%:*}"
}
recipe_alias() {
    : "${1:?dir to be added}"

    find "$1" -type f -or -type l | while read -r fn; do
        fn2="${fn#"$1"}"
        alias_name="$(echo "${fn2#/}" | tr '/' ',')"
        echo "r,$alias_name"="$(realpath "$fn")"
        alias "r,$alias_name"="$(realpath "$fn")"
    done
}
