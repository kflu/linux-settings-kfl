getpath() (
    /bin/sh -s -- "$@" <<'GETPATH'
    unset OPTIND
    USAGE="$(cat <<EOF
getpath [-t <type>] <path>

where type: scp
EOF
    )"
    while getopts 'ht:' opt; do case "$opt" in
        t)    type="$OPTARG" ;;
        h|*)  echo "$USAGE" >&2; exit 1 ;;
    esac done
    shift $((OPTIND-1))

    path="$1"

    case "$type" in
        scp|*)
            rpath="$(realpath "$path")"
            rhome="$(realpath "$HOME")"
            echo "scp://$(hostname)/~$(whoami)/${rpath##$rhome}"
            ;;
    esac
GETPATH

)

goog() (
    /bin/sh -s -- "$@" <<'GOOG'
    USAGE="$(cat <<EOF
goog [-i] <term>
    -i: I'm feeling lucky
EOF
    )"
    while getopts 'hi' opt; do case "$opt" in
        i)    lucky=1 ;;
        h|*)  echo "$USAGE" >&2; exit 1 ;;
    esac done
    shift $((OPTIND-1))
    term="${@:?search term}"
    url="google.com/search?q=${term}"
    [ -n "$lucky" ] && url="${url}&btnI=1"
    w3m "$url"
GOOG
)
alias googi="goog -i"
alias posix="googi posix"

