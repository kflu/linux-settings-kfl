    -xrm "xterm*cursorColor: #fc971f"            \
    -xrm "xterm*color0:      #1b1d1e"            \
    -xrm "xterm*color8:      #505354"            \
    -xrm "xterm*color1:      #f92672"            \
    -xrm "xterm*color9:      #ff5995"            \
    -xrm "xterm*color2:      #4df840"            \
    -xrm "xterm*color10:     #b6e354"            \
    -xrm "xterm*color3:      #f4fd22"            \
